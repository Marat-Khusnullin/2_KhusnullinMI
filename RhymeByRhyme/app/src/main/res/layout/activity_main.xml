<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.rhymebyrhyme.MainActivity">


    <EditText
        android:hint="Почта"
        android:id="@+id/login"
        android:textCursorDrawable="@null"
        android:gravity="center_horizontal"
        android:textColor="#222222"
        android:background="@drawable/signtheme_edit_text_holo_light"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="151dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText

        android:hint="Пароль"
        android:id="@+id/password"
        android:textCursorDrawable="@null"
        android:gravity="center_horizontal"
        android:textColor="#222222"
        android:background="@drawable/signtheme_edit_text_holo_light"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login"
        android:layout_below="@+id/login"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:inputType="textPassword" />
    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleAlpha="0.5"
        app:mrl_rippleRoundedCorners="27dp"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/ripple2"
        android:layout_alignStart="@+id/ripple2">

        <ImageView
            android:id="@+id/sign"
            android:layout_width="210dp"
            android:layout_height="60dp"


            android:layout_alignLeft="@+id/ripple2"
            android:layout_alignStart="@+id/ripple2"
            android:layout_alignTop="@+id/ripple"
            android:background="@drawable/signbutton" />

    </com.balysv.materialripple.MaterialRippleLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple2"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleAlpha="0.5"
        app:mrl_rippleRoundedCorners="27dp"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/ripple"
        android:layout_centerHorizontal="true">


        <ImageView
            android:id="@+id/registration"
            android:layout_width="210dp"
            android:layout_height="60dp"

            android:layout_below="@+id/ripple"
            android:layout_centerHorizontal="true"
            android:background="@drawable/registrationbutton" />
    </com.balysv.materialripple.MaterialRippleLayout>


</RelativeLayout>
