<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rhymebyrhyme.OwnPoemActivity">


       <EditText
           android:id="@+id/newTitle"
           android:hint="Название..."
           android:paddingLeft="15dp"
           android:textColor="#222222"
           android:layout_height="40dp"
           android:layout_width="300dp"
           android:background="@drawable/rounded"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="34dp">

       </EditText>



       <EditText
           android:id="@+id/newText"
           android:hint="Содержимое..."
           android:paddingLeft="15dp"
           android:gravity="top"
           android:textColor="#222222"
           android:layout_height="240dp"
           android:layout_width="300dp"
           android:background="@drawable/rounded"
           android:layout_below="@+id/newTitle"
           android:layout_alignLeft="@+id/newTitle"
           android:layout_alignStart="@+id/newTitle"
           android:layout_marginTop="22dp">

       </EditText>

       <Spinner
           android:id="@+id/spinner"
           android:layout_width="200dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="43dp"
           android:layout_below="@+id/newText"
           android:layout_alignLeft="@+id/newText"
           android:layout_alignStart="@+id/newText" />

       <TextView
           android:id="@+id/categoryText"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@+id/newText"
           android:layout_alignStart="@+id/newText"
           android:layout_below="@+id/newText"
           android:layout_marginTop="11dp"
           android:textSize="18sp"
           android:textColor="#222222"
           android:text="Выбрать категорию" />

       <Button
           android:id="@+id/publish"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="16dp"
           android:background="@drawable/roundedbutton"
           android:text="ОПУБЛИКОВАТЬ"
           android:textSize="15sp"
           android:textColor="#FFFFFF"
           android:layout_below="@+id/spinner"
           android:layout_alignLeft="@+id/spinner"
           android:layout_alignStart="@+id/spinner" />


</RelativeLayout>
