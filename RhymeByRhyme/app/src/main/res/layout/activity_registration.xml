<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.rhymebyrhyme.RegistrationActivity">

    <EditText
        android:hint="Почта"
        android:id="@+id/email"
        android:textCursorDrawable="@null"
        android:gravity="center_horizontal"
        android:textColor="#222222"
        android:background="@drawable/signtheme_edit_text_holo_light"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="151dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText

        android:hint="Пароль"
        android:id="@+id/passwordReg"
        android:textCursorDrawable="@null"
        android:gravity="center_horizontal"
        android:textColor="#222222"
        android:background="@drawable/signtheme_edit_text_holo_light"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />

    <EditText

        android:hint="Повторите пароль"
        android:id="@+id/passwordRegAgain"
        android:textCursorDrawable="@null"
        android:gravity="center_horizontal"
        android:textColor="#222222"
        android:background="@drawable/signtheme_edit_text_holo_light"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/passwordReg"
        android:layout_alignLeft="@+id/passwordReg"
        android:layout_alignStart="@+id/passwordReg" />



    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple2"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleAlpha="0.5"
        app:mrl_rippleRoundedCorners="27dp"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/passwordRegAgain"
        android:layout_centerHorizontal="true">


        <ImageView
            android:id="@+id/registration"
            android:layout_width="210dp"
            android:layout_height="60dp"

            android:layout_below="@+id/ripple"
            android:layout_centerHorizontal="true"
            android:background="@drawable/registrationbutton" />
    </com.balysv.materialripple.MaterialRippleLayout>

</RelativeLayout>
