<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.clclt.MainActivity">


    <Button
        android:id="@+id/id1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idplus"
        android:layout_toLeftOf="@+id/id2"
        android:layout_toStartOf="@+id/id2"
        android:text="1"/>

    <Button
        android:id="@+id/id2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idplus"
        android:layout_toLeftOf="@+id/id3"
        android:layout_toStartOf="@+id/id3"
        android:text="2"/>

    <Button
        android:id="@+id/id3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idplus"
        android:layout_toLeftOf="@+id/idplus"
        android:layout_toStartOf="@+id/idplus"
        android:text="3"/>

    <Button
        android:id="@+id/id6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idminus"
        android:layout_toLeftOf="@+id/idminus"
        android:layout_toStartOf="@+id/idminus"
        android:text="6"/>

    <Button
        android:id="@+id/id7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id0"
        android:layout_toLeftOf="@+id/id8"
        android:layout_toStartOf="@+id/id8"
        android:text="7"/>

    <Button
        android:id="@+id/id8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/id9"
        android:layout_toLeftOf="@+id/id9"
        android:layout_toStartOf="@+id/id9"
        android:text="8"/>

    <Button
        android:id="@+id/id9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idmult"
        android:layout_toLeftOf="@+id/idmult"
        android:layout_toStartOf="@+id/idmult"
        android:text="9"/>

    <Button
        android:id="@+id/id0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/idresult"
        android:layout_toRightOf="@+id/id1"
        android:layout_toEndOf="@+id/id1"
        android:text="0"/>

    <Button
        android:id="@+id/idplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/idminus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="+"/>

    <Button
        android:id="@+id/idminus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/idmult"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="-"/>

    <Button
        android:id="@+id/idmult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iddiv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="x"/>

    <Button
        android:id="@+id/iddiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/idresult"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="/"/>

    <Button
        android:id="@+id/idresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="="/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/idplus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/id5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_alignBaseline="@+id/id6"
        android:layout_alignBottom="@+id/id6"
        android:layout_toRightOf="@+id/id1"
        android:layout_toEndOf="@+id/id1" />

    <Button
        android:id="@+id/id4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_below="@+id/id1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/idopen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="("
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/idclose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=")"
        android:layout_alignBaseline="@+id/idplus"
        android:layout_alignBottom="@+id/idplus"
        android:layout_toRightOf="@+id/id2"
        android:layout_toEndOf="@+id/id2" />

    <Button
        android:id="@+id/iddelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="←"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/idclear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/id0"
        android:layout_toEndOf="@+id/id0" />

    <Button
        android:id="@+id/idpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/idclose"
        android:layout_alignBottom="@+id/idclose"
        android:layout_toRightOf="@+id/id1"
        android:layout_toEndOf="@+id/id1"
        android:text="."/>


</RelativeLayout>
